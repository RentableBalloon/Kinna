{
  "name": "kinna-desktop",
  "version": "1.0.0",
  "description": "Kinna Desktop App",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"cd ../frontend && npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.midasstudios.kinna",
    "productName": "Kinna",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Network"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  }
}
